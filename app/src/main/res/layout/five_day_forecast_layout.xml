<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primaryDarkColor">

    <ImageView
        android:id="@+id/iv_forecast_weather_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="fitXY"
        app:layout_constraintHeight_percent=".35"
        app:layout_constraintWidth_percent=".35"
        app:layout_constraintVertical_bias=".40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_day_of_week"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_forecast_day_month"
        app:layout_constraintVertical_bias="0"
        android:textAllCaps="true"
        android:textColor="@color/primaryLightColor"
        android:text="@string/day_of_week"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_forecast_day_month"
        app:layout_constraintTop_toBottomOf="@id/tv_day_of_week"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_forecast_weather_icon"
        android:textAllCaps="true"
        android:textColor="@color/primaryLightColor"
        android:text="@string/day_month"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_high_temp"
        app:layout_constraintTop_toBottomOf="@id/iv_forecast_weather_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_low_temp"
        android:textColor="@color/primaryLightColor"
        android:text="@string/high_temperature"
        android:textStyle="bold"
        android:textSize="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_low_temp"
        app:layout_constraintTop_toBottomOf="@id/iv_forecast_weather_icon"
        app:layout_constraintStart_toEndOf="@id/tv_high_temp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/primaryColor"
        android:text="@string/low_temperature"
        android:textSize="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_chance_of_precipitation"
        app:layout_constraintTop_toBottomOf="@id/tv_high_temp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/forecast_precipitation"
        android:textColor="@color/primaryColor"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>